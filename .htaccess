<IfModule mod_dir.c>
  DirectoryIndex index.php index.html
</IfModule>

<IfModule !mod_authz_core.c>
# Apache < 2.4

<Files "/mods/">
Order Allow,Deny
Deny from All
</Files>

<Files ".htaccess">
Order Allow,Deny
Deny from All
</Files>

<Files ".gitignore">
Order Allow,Deny
Deny from All
</Files>

<Files ".git">
Order Allow,Deny
Deny from All
</Files>

<Files "config.php">
Order Allow,Deny
Deny from All
</Files>

</IfModule>

<IfModule mod_authz_core.c>
# Apache >= 2.4 Deny, Order obsolete

<Files ".htaccess">
Require all denied
</Files>

<Files ".gitignore">
Require all denied
</Files>

<Files ".git">
Require all denied
</Files>

<Files "config.php">
Require all denied
</Files>

<Files "/mods/">
Require all denied
</Files>

</IfModule>